<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/userprofile_background"
                  android:weightSum="1" android:orientation="vertical"
                  android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="340dp" android:visibility="visible">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="200dp">
                <ImageView
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/usuario_de_prova" android:id="@+id/imageView"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="200dp">
                    <TextView
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:id="@+id/nom"/>
                    <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:id="@+id/cognom"/>

                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginRight="45dp"
                    android:layout_marginLeft="45dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="200dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">
                    <LinearLayout
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <TextView
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Compres Realitzades"/>
                        <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/compres"/>
                    </LinearLayout>
                    <LinearLayout
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <TextView
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vendes Realitzades"/>
                        <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/vendes"/>
                    </LinearLayout>

                    <LinearLayout
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <TextView
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valoracions Rebudes"/>
                        <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/valoracions"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <!-- Main content -->

        </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productes Comprats"
                android:layout_alignBaseline="@+id/textView3" android:layout_alignBottom="@+id/textView3"
                android:layout_alignEnd="@+id/bottomNavigationView" android:layout_marginEnd="39dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productes a la Venda"
                android:layout_marginTop="44dp" android:id="@+id/textView3"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginStart="33dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_shopping_cart_black_36dp"
                android:id="@+id/imageButton2"
                android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:layout_marginTop="78dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_shopping_cart_black_36dp"
                android:id="@+id/imageButton3"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="78dp"/>
        <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:menu="@menu/navegationitems_userprofile"
                android:id="@+id/bottomNavigationView"
                android:layout_alignParentBottom="true">
        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>
</LinearLayout>
