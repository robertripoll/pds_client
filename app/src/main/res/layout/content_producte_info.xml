<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_producte_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.udg.pds.cheapyandroid.activity.ProducteInfo">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <LinearLayout
                android:id="@+id/ubicacio_producte_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <ImageView
                android:layout_width="17dip"
                android:layout_height="17dip"
                android:src="@mipmap/baseline_location_on_black_24dp"/>

            <TextView
                android:id="@+id/ubicacio_producte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:ellipsize="end"
                android:lines="1"
                android:text="Bogota, Colombia" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/usuari_producte_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

            <ImageView
                    android:layout_width="17dip"
                    android:layout_height="17dip"
                    android:src="@mipmap/baseline_account_circle_black_24"/>

            <TextView
                    android:id="@+id/usuari_producte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Usuari Prova" />

        </LinearLayout>

        <TextView
            android:id="@+id/desc_producte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="DescripciÃ³n del producto..."/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/hint_preu_negociable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_preu_negociable"
                    android:layout_weight="1"/>
            <TextView
                    android:text="@string/hint_intercanvi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_intercanvi"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
