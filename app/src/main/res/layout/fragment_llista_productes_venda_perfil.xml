<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="org.udg.pds.cheapyandroid.fragment.LlistaProductesPerfilVendesFragment">

    <ListView android:id="@+id/llista_productes"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:choiceMode="singleChoice"
              android:dividerHeight="1dp"
              android:divider="@color/colorGrey"/>
    <TextView
            android:id="@+id/privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/privacy_policy"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:clickable="true"
            android:text="@string/text_privacy"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>
