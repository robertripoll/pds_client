<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/modificarPerfil">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Edit Profile"
            android:textSize="20dp"
            android:textStyle="italic"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="10dp"/>

        <ImageView android:layout_width="200dp" android:layout_height="200dp"
                   android:id="@+id/fotoActualitzada"
                   android:layout_gravity="center"
                   android:src="@drawable/usuario_de_prova"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="25dp">
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Change Photo"
                android:enabled="false"/>
            <Button android:layout_width="wrap_content" android:layout_height="25dp"
                android:textColor="@color/colorWhite_UserProfile"
                android:background="@color/colorPrimary"
                android:id="@+id/botoFotoActualitzada"
                android:text="Photo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="25dp">
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/nomActualitzat"
                  android:layout_weight="2"
                  android:hint="Name"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/cognomActualitzat"
                      android:layout_weight="1"
                      android:hint="Surname"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="25dp">
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/emailActualitzat"
                      android:layout_weight="2"
                      android:hint="Email"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>